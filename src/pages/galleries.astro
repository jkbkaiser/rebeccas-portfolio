---
import '../styles/global.css';
const pageTitle = "Galleries";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
        <style>
            body {
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;
                padding: 0;
                margin: 0;
            }
            h1 {
                margin: 0;
                padding: 0;
                text-shadow: 5px 5px 2px rgba(0, 0, 0, 0.2);
                font-size: 10vh;
                color: black;
                text-align: center;

                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 999;
            }
            .container {
                background-color: #F2F2F2;
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;

                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .gallery_row_top {
                margin-top: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
            .gallery_row_bot {
                margin-bottom: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
            .gallery_display {
                border: 3px solid;
                box-shadow: 5px 5px 2px rgba(0, 0, 0, 0.2);

                min-width: 38vh;
                width: 38vh;
                height: 38vh;
                position: relative;
            }
            .gallery_frame {
                height: 80%;
                width: 80%;

                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);

                overflow: hidden;
            }
            .gallery_name {
                flex-direction: column;
                display: flex;
                justify-content: center;
                z-index: 999;
                height: 100%;
                width:  100%;
                position: absolute;
                left: 50%;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
            p {
                padding: 0;
                margin: 0;
                font-size: 3em;
                text-align: center;
                font-family: "Bebas";
                opacity: 0;
                transition: 1.5s;
            }
            .gallery_image {
                object-fit: cover;
                height: 100%;
                position: absolute;
                left: 50%;
                transform: translate(-50%, 0);
                transition: 1.5s;
            }
            .gallery_display:hover p {
                opacity: 100;
            }
            .gallery_display:hover .gallery_image {
                filter: blur(2px);
                -webkit-filter: blur(2px);
            }

        </style>
	</head>
