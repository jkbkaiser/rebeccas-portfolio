---
import GalleryDisplay from "../../components/GalleryDisplay.astro";
import "../../styles/global.css";

const pageTitle = "Galleries";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <style>
            body {
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;
                padding: 0;
                margin: 0;
            }
            h1 {
                margin: 0;
                padding: 0;
                text-shadow: 5px 5px 2px rgba(0, 0, 0, 0.2);
                font-size: 10vh;
                color: black;
                text-align: center;

                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 999;
            }
            .container {
                background-color: #f2f2f2;
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;

                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .gallery_row_top {
                margin-top: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
            .gallery_row_bot {
                margin-bottom: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <a href="/">Home</a>
        <h1>{pageTitle}</h1>
        <div class="container">
            <div class="gallery_row_top">
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/galleries/born-never-asked"
                    lines={["Born,", "never asked"]}
                />
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/"
                    lines={["Born,", "never asked"]}
                />
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/"
                    lines={["Born,", "never asked"]}
                />
            </div>
            <div class="gallery_row_bot">
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/"
                    lines={["Born,", "never asked"]}
                />
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/"
                    lines={["Born,", "never asked"]}
                />
                <GalleryDisplay
                    galleryImgSrc={"https://storage.googleapis.com/rebeccas_portfolio/images/about/background.jpg"}
                    galleryUrl="/"
                    lines={["Born,", "never asked"]}
                />
            </div>
        </div>
    </body>
</html>
