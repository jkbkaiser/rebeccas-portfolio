---
import { Image } from "astro:assets";

import GalleryDisplay from "../../components/GalleryDisplay.astro";
import "../../styles/global.css";

import gallery_image_born_never_asked from "/src/assets/images/galleries-born,neverasked.jpg";
import gallery_image_eggum from "/src/assets/images/galleries-eggum.jpg";
import gallery_image_veterinary_clinic from "/src/assets/images/galleries-veterinaryclinic.jpg";
import gallery_image_tree_structures from "/src/assets/images/galleries-treestructures.jpg";
import gallery_image_how_to_portray_sadness from "/src/assets/images/galleries-howtoportraysadness.jpg";
import gallery_image_micromose from "/src/assets/images/galleries-micromose.jpg";

const pageTitle = "Galleries";
// TODO add transitions
// const fadeAnimationDurations = [
//     "1.5s",
//     "1.75s",
//     "2.0s",
//     "2.25s",
//     "2.5s",
//     "2.75s",
// ];
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>{pageTitle}</title>
        <style>
            body {
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;
                padding: 0;
                margin: 0;
            }
            h1 {
                margin: 0;
                padding: 0;
                text-shadow: 5px 5px 2px rgba(0, 0, 0, 0.2);
                font-size: 10vh;
                color: black;
                text-align: center;

                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 999;
            }
            .container {
                background-color: #f2f2f2;
                position: fixed;
                width: 100%;
                height: 100%;
                left: 0;
                top: 0;

                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }
            .gallery_row_top {
                margin-top: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
            .gallery_row_bot {
                margin-bottom: 2%;
                height: 40vh;
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <a href="/">Home</a>
        <h1>
            {pageTitle}
        </h1>
        <div class="container">
            <div class="gallery_row_top">
                <GalleryDisplay
                    galleryUrl="/galleries/born-never-asked"
                    lines={["Born,", "never asked"]}
                >
                    <Image
                        src={gallery_image_born_never_asked}
                        alt="Gallery 'Born, never asked' Cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
                <GalleryDisplay galleryUrl="/" lines={["Eggum"]}>
                    <Image
                        src={gallery_image_eggum}
                        alt="Gallery 'Eggum' Cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
                <GalleryDisplay galleryUrl="/" lines={["Veterinary", "clinic"]}>
                    <Image
                        src={gallery_image_veterinary_clinic}
                        alt="Gallery 'Veterinary clinic' cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
            </div>
            <div class="gallery_row_bot">
                <GalleryDisplay galleryUrl="/" lines={["Tree", "structures"]}>
                    <Image
                        src={gallery_image_tree_structures}
                        alt="Gallery 'Tree structure' Cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
                <GalleryDisplay
                    galleryUrl="/"
                    lines={["How to portray", "sadness?"]}
                >
                    <Image
                        src={gallery_image_how_to_portray_sadness}
                        alt="Gallery 'How to portray sadness?' Cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
                <GalleryDisplay galleryUrl="/" lines={["Micromose"]}>
                    <Image
                        src={gallery_image_micromose}
                        alt="Gallery 'Micromose' cover"
                        style="height: 100%; width: 100%; object-fit: cover;"
                        quality={10}
                        loading="eager"
                    />
                </GalleryDisplay>
            </div>
        </div>
    </body>
</html>
